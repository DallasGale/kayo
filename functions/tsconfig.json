{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src"],
  "rules": {
    "indent": "off"
  }
}
