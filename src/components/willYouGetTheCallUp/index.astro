---
import Button from "../button/index.astro";
import Bg from "../../assets/generic-seated-aussie-rules-stadium-600nw.png";
---

<section>
  <div class="content">
    <h2 class="display-2">Will you get the kayo call up?</h2>
    <div>
      <Button label="Submit your entry" isLarge link="/submit" />
    </div>
  </div>
  <div class="bg" style={{ backgroundImage: `url(${Bg.src})` }}></div>
</section>

<style lang="scss">
  @import "../../breakpoints.scss";

  section {
    align-items: center;
    display: flex;
    background-color: var(--kayogreen);
    background-repeat: no-repeat;
    background-position: center bottom;
    background-size: cover;
    position: relative;
    padding: 116px 40px;
    height: 100%;
  }
  .content {
    text-align: center;
    gap: 62px;
    max-width: 800px;
    z-index: 2;
  }
