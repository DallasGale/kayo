---
const { link, label, isLarge, isSecondary, isDark } = Astro.props;
import styles from "./styles.module.scss";
---

<a
  href={link}
  class={`${styles.btn} ${isSecondary ? styles.secondaryBtn : styles.primaryBtn} ${isLarge ? styles.largeBtn : ""} ${isDark ? styles.darkBtn : styles.whiteBtn}`}
  ><span
    style={{
      padding: "0 27px 0 24px",
      height: "100%",
      width: "100%",
      display: "flex",
      alignItems: "center",
      justifyContent: "center",
    }}>{label}</span
  ></a
>
