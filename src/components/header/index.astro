---
import KayoLogo from "../../assets/kayo-logo-mono.png";
import FoxLogo from "../../assets/fox-logo.png";
---

<header>
  <img src={KayoLogo.src} class="kayo-logo" alt="Kayo Sports" />
  <img src={FoxLogo.src} class="fox-logo" alt="Fox Footy" />
</header>

<style lang="scss">
  @import "../../breakpoints.scss";
  header {
    align-items: center;
    display: flex;
    justify-content: flex-start;
    width: 100%;
    gap: 20px;
    align-items: center;
    box-sizing: border-box;
    position: absolute;
    padding: 24px 16px 0; // Added right padding
    max-width: 1440px;
    margin: auto;
    top: 0;
    box-sizing: border-box;
    left: 0;
    right: 0;
  }

  .kayo-logo {
    width: 69px;
    height: 36px;
  }
  .fox-logo {
    width: 60px;
    height: 37px;
  }

  @media screen and (min-width: $breakpoint-desktop) {
    header {
      padding: 40px 0 0 40px;
    }
    .kayo-logo {
      width: 104px;
      height: 55px;
    }
    .fox-logo {
      width: 90px;
      height: 56px;
    }
  }

  ul {
    align-items: center;
    display: flex;
    gap: 1rem;
    list-style: none;
    justify-content: space-between;
    width: 100%;
    padding-left: 0;
    margin-left: 0;
  }
  img {
    height: 2rem;
  }
</style>
