---
import KayoLogo from "../../assets/kayo-logo-mono.png";
import FoxLogo from "../../assets/fox-logo.svg";
import Bg from "../../assets/generic-seated-aussie-rules-stadium-600nw.png";
import Button from "../button/index.astro";
import LegalLinks from "./legalLinks";

import TikTok from "../../assets/tiktok.svg";
import Instagram from "../../assets/instagram.svg";

const { isLandingPage } = Astro.props;
---

<footer id="footer">
  <section class={`section ${isLandingPage ? "section-tall" : ""}`}>
    {
      isLandingPage && (
        <>
          <div class="contentTop">
            <h2 class="display-2">
              Will you get
              <br />
              the kayo call up?
            </h2>
            <div>
              <Button label="Submit your entry" isLarge link="/submit" />
            </div>
          </div>
          <div class="bg" style={{ backgroundImage: `url(${Bg.src})` }} />
        </>
      )
    }

    <div class="contentBottom">
      <div class="logos">
        <a href="https://kayosports.com.au/">
          <img src={KayoLogo.src} class="kayo-logo" alt="Kayo Sports" />
        </a>
        <a href="https://www.foxsports.com.au/afl">
          <img src={FoxLogo.src} class="fox-logo" alt="Fox Footy" />
        </a>
      </div>

      <div class="links">
        <LegalLinks client:load />

        <div class="social">
          <p class="small-print">
            <a href="https://www.tiktok.com/@kayosports" target="_blank">
              <img src={TikTok.src} alt="TikTok" />
            </a>
          </p>
          <p class="small-print">
            <a href="https://www.instagram.com/kayosports/" target="_blank">
              <img src={Instagram.src} alt="Instagram3" />
            </a>
          </p>
        </div>
      </div>
    </div>
    {
      isLandingPage && (
        <div class="bg" style={{ backgroundImage: `url(${Bg.src})` }} />
      )
    }
  </section>
</footer>

<style lang="scss">
  @import "../../breakpoints.scss";

  .section {
    justify-content: center;
    align-items: center;
    display: flex;
    background-color: var(--kayogreen);
    background-repeat: no-repeat;
    background-position: center bottom;
    background-size: cover;
    position: relative;
    padding: 116px 40px;
    height: 100%;
    flex-direction: column;
    gap: 70px;
  }
  .contentTop {
    text-align: center;
    gap: 62px;
    max-width: 900px;
    z-index: 2;
    display: flex;
    flex-direction: column;
  }

  footer {
    position: absolute;
    width: 100%;
    background-color: var(--kayogreen);
    z-index: 0;
    display: flex;
    &.hide {
      display: none;
    }
  }
  .bg {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    left: 0;
    right: 0;
    background-repeat: no-repeat;
    background-size: cover;
    mix-blend-mode: darken;
    background-position: center bottom -100px;
    z-index: 1;
  }

  .logos {
    display: flex;
    gap: 8px;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: auto;
  }
  .contentBottom {
    margin: auto;
    left: 0;
    right: 0;
    position: relative;
    width: 100%;
    bottom: 0;
    z-index: 2;
    flex-direction: row;
    justify-content: space-around;
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-bottom: 30px;
    padding: 0 20px;
    box-sizing: border-box;
  }
  .kayo-logo {
    width: 84px;
    height: 45px;
  }
  .fox-logo {
    width: 75px;
    height: 47px;
  }

  .social {
    display: flex;
    gap: 20px;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    width: 100%;
  }

  @media screen and (min-width: $breakpoint-desktop) {
    .section {
      padding: 116px 20px 52px;
      gap: 0;
    }

    .section-tall {
      height: 90vh;
    }
    .bg {
      background-position: center bottom 56px;
    }
    .kayo-logo {
      width: 104px;
      height: 55px;
    }
    .fox-logo {
      width: 117px;
      height: 70px;
    }
    footer {
      height: auto;
    }
    .bg {
      background-position: center bottom -100px;
    }

    .logos {
      justify-content: flex-start;
      gap: 54px;
    }
    .social {
      justify-content: flex-end;
    }

    .links {
      gap: 20px;
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }

    .contentTop {
      height: 600px;
      align-items: center;
      justify-content: flex-end;
    }
    .contentBottom {
      flex-direction: row;
      align-items: center;
      padding: 0 42px;
    }
  }
</style>
