    100% {
      opacity: 1;
      transform: translateX(0%) translateY(-96px);
    }
  }
  img {
    width: 90%;
  }
  .hero-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    text-align: center;
    max-width: 1048px;
    margin: auto;
  }

  .cta-container {
    opacity: 0;
    transform: translateX(-100px) translateY(-96px); // Move it up to overlap with header
